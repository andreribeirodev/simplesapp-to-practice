<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="22dp"
    android:background="@color/cardview_shadow_start_color"
    android:padding="12dp">

    <TextView
        android:id="@+id/textViewNameExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Contato"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTelefoneExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Telefone para contato"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textViewNameExample"
        app:layout_constraintTop_toBottomOf="@id/textViewNameExample" />


</androidx.constraintlayout.widget.ConstraintLayout>